<%= render 'shared/errors', obj: @category %>

<%= form_for @category, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit( @category.new_record? ? "Create" : "Update account", class: "btn btn-default" )%>
    </div>
  </div>
<% end %>