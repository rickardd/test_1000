<h1>List of articles</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to "show", article_path(a) %></td>
        <td><%= link_to "edit", edit_article_path(a) %></td>
      </tr>
    <% end %>
  </tbody>
</table>




